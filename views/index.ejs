<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="./css/style.css" rel="stylesheet">
    <link href="./css/font-awesome.min.css" rel="stylesheet"> 
</head>
<body>
    <h1><%= title %></h1>
    <%- include ('./menu.ejs') %>



    <div class="grid">
        <% datas.forEach( (data) => { %>
            <div class="cell">
                <table>
                    <tr>
                        <td colspan="2" rowspan="4"> 
                            <a class="btn" href="/upload/<%= data._id %>"><i class="fa fa-edit"></i></a>
                            <img src="./uploads/<%= data.profile %>" max-width="300px"></td>
                        <td> <%= data.name %> </td>
                    </tr>
                    <tr><td><i class="fa fa-trophy" aria-hidden="true"></i> <%= data.level %></td></tr>
                    <tr><td><i class="fa fa-bullseye" aria-hidden="true"></i> <%= data.kills %></td></tr>
                    <tr><td><i class="fa fa-gamepad" aria-hidden="true"></i> <%= data.matches %></td></tr>
                    <tr><td colspan="3">
                        <a class="btn warning" href="/edit/<%= data._id %>"><i class="fa fa-edit"></i></a> 
                        <a class="btn danger" href="/delete/<%= data._id %>"><i class="fa fa-trash"></i></a>
                    </td></tr>
                </table>
            </div>
        <% }); %>
      </div>
</body>
</html>